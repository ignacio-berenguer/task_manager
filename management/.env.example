# ============================================================
# Task Manager Migration Configuration
# Copy this file to .env and customize as needed
# ============================================================

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=task_manager_management.log

# --- Database (PostgreSQL) ---
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=task_user
DB_PASSWORD=your_secure_password
DB_NAME=tasksmanager

# --- Excel Source ---
EXCEL_SOURCE_DIR=./excel_source
EXCEL_SOURCE_FILE=tareas.xlsx
EXCEL_SHEET_TAREAS=Tareas
EXCEL_TABLE_TAREAS=Tareas

# --- Batch Processing ---
BATCH_COMMIT_SIZE=100
